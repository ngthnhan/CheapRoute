<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skyscanner"
        android:id="@+id/skyscannerButton"
        android:layout_marginTop="51dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="callAPI_1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/responseText"
        android:onClick="callAPI_1"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/skyscannerButton"
        android:layout_alignStart="@+id/skyscannerButton"
        android:layout_marginBottom="169dp"
        android:layout_alignRight="@+id/skyscannerButton"
        android:layout_alignEnd="@+id/skyscannerButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TripAdviser"
        android:id="@+id/tripadviserButton"
        android:layout_below="@+id/skyscannerButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"
        android:onClick="callAPI_2" />
</RelativeLayout>
